<%= form_for @post do |f| %>

  <p>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label "Content" %>
    <%= f.text_area :content %>
  </p>

  <% Category.all.each do |c| %>
    <p>
      <label for="category_id_<%= c.id %>">Cool</label>
      <input type="checkbox" name="post[category_ids]" value="1">
    </p>
  <% end %>

  <%= f.submit %>
<% end %>
